<div class="user-form-background">
  <div class="user-form-container">
    <div class="user-form-box">
      <div class="user-form">
        <h2><i class="fas fa-dumbbell"></i>　新規ユーザー登録　<i class="fas fa-dumbbell"></i></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :name %><br/>
            <%= f.text_field :name, class: "form-field", placeholder: "15文字以内"  %>
        　</div>

          <div class="field">
            <%= f.label :image, class: "label" %><br/>
            <%= f.file_field :image, class: "form-field" %>
        　</div>

          <div class="field">
            <%= f.label :self_introduction, class: "label" %><br/>
            <%= f.text_area :self_introduction, class: "form-field", placeholder: "120文字以内"  %>
      　  </div>

          <div class="field">
            <%= f.label :email, class: "label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-field", placeholder: "6文字以上"  %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field", placeholder: "6文字以上"  %>
          </div>

          <div class="actions">
            <%= f.submit "登録する",class: "form-button" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>