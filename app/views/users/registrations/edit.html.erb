<div class="user-form-background">
  <div class="user-form-container">
    <div class="user-form-box">
      <div class="user-form">
        <h2>プロフィール編集<i class="fas fa-user-edit"></i></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :image %><br />
            <%= f.file_field :image, class: "form-field" %>
  　　　　　</div>
          
          <div class="user-image">
          <% if @user.image? %>
            <img src ='<%= @user.image %>' class="user-image">
          <% end%>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field"  %>
          </div>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name,class: "form-field" %>
        　</div>

          <div class="field">
            <%= f.label :self_introduction, class: "label" %><br />
            <%= f.text_area :self_introduction, class: "form-field" %>
      　  </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label :password, class: "label" %> <i>(変更したくない場合は空白にしてください)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-field", placeholder: "6文字以上"  %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field", placeholder: "6文字以上"  %>
          </div>

          <div class="field">
            <%= f.label :current_password %> <i>(変更を完了するには現在のパスワードの入力が必須です)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-field", placeholder: "6文字以上"  %>
          </div>

          <div class="actions">
            <%= f.submit "アカウントの更新", class: "form-button" %>
          </div>
        <% end %>

        <%= button_to "アカウントを消去しますか？", registration_path(resource_name), data: { confirm: "本当にアカウントを消去しますか?" }, method: :delete, class: "form-button" %>

        <%= link_to "マイページに戻る↩", :back %>
      </div>  
    </div>  
  </div>
</div>