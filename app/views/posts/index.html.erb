<div class="post-index-page">
  <div class="search-container">
    <div class="search-area">
      <div class="search-form">
        <%= search_form_for @q, url: posts_path do |f| %>
            
          <%= f.label :training_menus_or_training_menus_event_part_cont,"検索" %>
          <%= f.search_field :training_menus_part_or_training_menus_event_cont, 
          placeholder: "トレーニング部位や種目で検索, 例1:脚, 例2:ベンチプレス,",class: "input-search" %>

          <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
            <i class="fas fa-search"></i>
          <% end %>

        <% end %>
      </div>
    </div>  
  </div>
  <div class="post-box-container">
    <% @posts.each do |post| %>
    <div class="post-box">
      <div class="post-content-box">
        <div class="post-content">
          <div class="post-user-info">
            <img src ='<%= post.user.image %>' class="post-user-image">
            <div class="post-user-name"><%= link_to post.user.name, user_path(post.user_id) %></div>
          </div>
          <div class="post-user-comment">
            <%= post.comment %>
          </div>
          <% post.training_menus.each do |training_menu| %>
          <div class="post-training-menu">
            部位:<%= training_menu.part %>/種目:<%= training_menu.event %><br>
            <%= training_menu.weight %>kg
            <%= training_menu.repetition %>rep
            <%= training_menu.set_count %>set
          </div>
          <% end %>
          <div>
            <img src ='<%= post.image %>' class="post-user-image">
          </div>
        </div>
      </div>
      <div class="post-reaction-box">
        <div class="post-reaction-content">
          <div class="post-like-button">
            <% if post.liked_by?(current_user)%>
              <%= link_to post_likes_path(post.id), method: :delete do %>
                <span class="fas fa-thumbs-up like-btn-unlike">:<%= post.likes.count %></span>
              <% end %>
            <% else %>
              <%= link_to post_likes_path(post.id), method: :post do %>
                <span class="fas fa-thumbs-up like-btn">:<%= post.likes.count %></span>
              <% end %>
            <% end %>
          </div>
          <div class="post-comment-button">
            <%=link_to post_path(post.id) do %>
              <span><i class="far fa-comment"></i>:<%= post.comments.count %></span>
            <% end %>
          </div>
          <div class="post-edit-delete-link">
            <% if post.user_id == current_user.id%>
              <%=link_to edit_post_path(post) do %>
                <span><i class="fas fa-edit"></i></span>
              <% end %>
              <%=link_to post_path(post),method: :delete , data: {confirm: "本当に削除しますか？"}  do %>
                <span><i class="fas fa-trash-alt"></i></span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <div>
</div>